# ============================================================================
# Docker Environment Configuration
# ============================================================================
#
# This file contains environment variables for Docker Compose setup.
# Copy this to .env.local and customize for your local development.
#
# SECURITY NOTE: Never commit real credentials to version control!
#
# ============================================================================

# Application Configuration
NODE_ENV=development
APP_NAME=PhaserAI
APP_VERSION=1.0.0

# Frontend Configuration
VITE_SUPABASE_URL=http://localhost:54321
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here
VITE_API_URL=http://localhost:3000/api

# Database Configuration
POSTGRES_DB=phaserai_dev
POSTGRES_USER=phaserai_admin
POSTGRES_PASSWORD=dev_password_123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# AWS Configuration (for local development with LocalStack)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localstack:4566

# Development Tools
DEBUG=true
LOG_LEVEL=debug

# Docker Compose Profiles
COMPOSE_PROFILES=app,database

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3